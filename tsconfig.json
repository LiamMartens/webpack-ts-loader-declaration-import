{
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node",
      "target": "es2015",
      "jsx": "react",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "noEmitOnError": true,
      "composite": true,
      "allowSyntheticDefaultImports": true,
      "lib": [
        "es2017.object",
        "es2017",
        "es2016",
        "es2015",
        "dom"
      ]
    },
    "exclude": [
      "node_modules"
    ]
  }
  